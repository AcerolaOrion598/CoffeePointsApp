<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map_container"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="@dimen/nav_bar_height"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/point_add_btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="13dp"
        android:paddingStart="13dp"
        android:paddingEnd="26dp"
        android:textColor="@color/colorWhite87"
        android:textSize="12sp"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:text="@string/new_point_btn"
        android:background="@drawable/add_point_button"
        android:drawableStart="@drawable/ic_add_plus_button_17dp"
        android:drawablePadding="13dp"
        android:drawableTint="@color/colorWhite87"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/point_info_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:paddingTop="20dp"
        android:paddingStart="29dp"
        android:paddingEnd="29dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/rounded_corners_shape"
        android:elevation="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/point_name"
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/colorBlack87"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/point_about"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/colorBlack87"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/point_name" />

        <TextView
            android:id="@+id/point_owner"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/colorBlack60"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/point_about" />

        <TextView
            android:id="@+id/point_active"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/roboto"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/point_owner"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/point_active_info_window_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/point_active"
            app:layout_constraintTop_toBottomOf="@+id/point_owner"
            android:visibility="gone"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/point_edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/save_button"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="@string/edit_btn"
            android:textColor="@color/colorWhite87"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/point_active"
            android:visibility="gone"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/point_delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/delete_button"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="@string/delete_btn"
            android:textColor="@color/colorRed87"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/point_edit_btn"
            app:layout_constraintTop_toBottomOf="@+id/point_active"
            android:visibility="gone"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/point_add_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/rounded_corners_shape"
        android:elevation="10dp"
        android:paddingTop="16dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:visibility="invisible">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/point_name_ed"
            android:textCursorDrawable="@drawable/cursor_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="12sp"
            android:fontFamily="@font/roboto"
            android:background="@drawable/edit_text_w_stroke"
            android:hint="@string/point_name_hint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlSymmetry" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/point_hint_ed"
            android:textCursorDrawable="@drawable/cursor_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="12sp"
            android:background="@drawable/edit_text_w_stroke"
            android:hint="@string/point_hint_hint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/point_name_ed"
            tools:ignore="RtlSymmetry"
            android:visibility="gone"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/point_about_ed"
            android:textCursorDrawable="@drawable/cursor_color"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:gravity="top"
            android:textSize="12sp"
            android:background="@drawable/edit_text_w_stroke"
            android:hint="@string/point_about_hint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/point_hint_ed"
            tools:ignore="RtlSymmetry"
            android:visibility="gone"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/point_active_switch_tv"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="1dp"
            android:textSize="12sp"
            android:fontFamily="@font/roboto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/point_about_ed" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/point_active_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/point_active_switch_tv"
            app:layout_constraintTop_toBottomOf="@+id/point_about_ed" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/point_add_save_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/save_button"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="@string/save_btn"
            android:textColor="@color/colorWhite87"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/point_active_switch"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/point_add_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/cancel_button"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="@string/cancel_btn"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/point_add_save_btn"
            app:layout_constraintTop_toBottomOf="@+id/point_active_switch"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/green_marker_on_add"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/green_marker"
        android:visibility="invisible"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/red_marker_on_add"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/red_marker"
        android:visibility="invisible"/>


</androidx.constraintlayout.widget.ConstraintLayout>