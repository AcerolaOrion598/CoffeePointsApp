<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/register_email_ed"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="150dp"
        android:hint="@string/ed_email_hint"
        android:background="@drawable/edit_text_w_stroke"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="12sp"
        android:fontFamily="@font/roboto"
        tools:ignore="RtlSymmetry" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/register_password_ed"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="56dp"
        android:hint="@string/ed_password_hint"
        android:background="@drawable/edit_text_w_stroke"
        app:layout_constraintTop_toTopOf="@+id/register_email_ed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="12sp"
        android:fontFamily="@font/roboto"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/log_in_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/log_in_tv"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/register_password_ed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/colorBlue87"
        android:fontFamily="@font/roboto"
        android:textSize="10sp"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/wrong_credentials_register_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wrong_credentials"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/log_in_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/colorRed87"
        android:fontFamily="@font/roboto"
        android:textSize="10sp"
        android:visibility="gone"
        tools:ignore="SmallSp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/register_btn"
        android:layout_width="180dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wrong_credentials_register_tv"
        android:layout_marginTop="5dp"
        android:background="@drawable/save_button"
        android:text="@string/register_btn"
        android:textColor="@color/colorWhite87"
        android:textSize="12sp" />
</androidx.constraintlayout.widget.ConstraintLayout>