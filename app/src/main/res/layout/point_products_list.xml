<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout_point_products"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/point_product_name_tv"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/colorBlack87"
        android:layout_marginBottom="11dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/point_product_type_tv"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:textColor="@color/colorBlack60"
        android:textSize="16sp"
        android:layout_below="@+id/point_product_name_tv" />

</RelativeLayout>